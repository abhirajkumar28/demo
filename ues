    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // AI Assistant demo functionality
        const chatInput = document.querySelector('input[placeholder*="Ask anything"]');
        const sendButton = chatInput?.nextElementSibling;
        
        if (sendButton) {
            sendButton.addEventListener('click', () => {
                if (chatInput.value.trim()) {
                    // Simulate AI response
                    alert('ü§ñ AI Assistant: Thanks for your question! In the real app, I would provide personalized insights about your phone security.');
                    chatInput.value = '';
                }
            });
        }

        // Add enter key support for chat
        if (chatInput) {
            chatInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendButton.click();
                }
            });
        }

        // Download button functionality
        document.querySelectorAll('button').forEach(button => {
            if (button.textContent.includes('Download') || button.textContent.includes('Get Started') || button.textContent.includes('Start Pro')) {
                button.addEventListener('click', () => {
                    alert('üéâ Thanks for your interest! This is a demo page. In production, this would redirect to the app store or start the download process.');
                });
            }
        });
    </script>
